<%= render partial: "decidim/shared/component_announcement" %>

<div class="proposal__layout">
  <div class="proposal__main">
    <h2 class="heading2 margin-bottom-1"><%= render_participatory_text_title(@participatory_text) %></h2>
    <%= render partial: "decidim/proposals/proposals/participatory_texts/view_index" %>
    <div class="card" id="proposals">
      <% @proposals.each do |proposal| %>
        <%= cell("decidim/proposals/participatory_text_proposal", proposal, active_proposal: local_assigns[:active_proposal], context: { current_user: current_user }) %>
      <% end %>
    </div>
  </div>

  <div class="proposal__sidebar">
    <% if local_assigns[:active_proposal].presence %>
      <%= render partial: "decidim/proposals/proposals/participatory_texts/overview", locals: { proposal: active_proposal } %>
    <% end %>
  </div>
</div>
