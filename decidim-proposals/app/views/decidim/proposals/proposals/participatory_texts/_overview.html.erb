<div class="proposal__overview" id="proposal__overview">

  <div class="row">
    <div class="column">
      <h2><%= present(@proposal).title_if_enabled %></h2>

      <div class="amendments">
        <h3 class="section-heading">
          <%= @proposal.amendments.size %> <%= Decidim::Amendment.model_name.human(count: @proposal.amendments.size) %>
        </h3>

        <% @proposal.amendments.order(created_at: :desc).each_with_index do |amendment, index| %>
          <div class="<%= "toggle-visibility" if index > 2 %>">
            <%= cell("decidim/proposals/amendment", amendment) %>
          </div>
        <% end %>
        <% if @proposal.amendments.order(created_at: :desc).size > 2 %>
          <button data-toggle-class="toggle-visibility" data-toggle="show" class="link margin-top-1">Show more</button>
          <button data-toggle-class="toggle-visibility" data-toggle="hide" class="link margin-top-1 toggle-visibility">Show less</button>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <%= cell("decidim/proposals/comments", @proposal) %>
  </div>
</div>
