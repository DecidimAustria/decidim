<% if proposal.rejected? || proposal.withdrawn? %>
  <div></div>
<% else %>
  <div id="proposal-<%= proposal.id %>-vote-button">
    <% if !current_user %>
      <% if current_settings.votes_blocked? %>
        <%= action_authorized_button_to :vote, proposal_proposal_vote_path(proposal_id: proposal, from_proposals_list: from_proposals_list, chevron_button: true), resource: proposal, class: "light button--sc disabled", disabled: true, title: t("decidim.proposals.proposals.vote_button.votes_blocked") do %>
          <span class="show-for-sr"><%= t("decidim.proposals.proposals.vote_button.votes_blocked") %></span>
          <%= icon "chevron-top", class: "icon--small", role: "img", "aria-hidden": true %>
          <span class="comment__votes--count">1<%#= up_votes_count %></span>
        <% end %>
      <% else %>
        <%= action_authorized_button_to :vote, proposal_proposal_vote_path(proposal_id: proposal, from_proposals_list: from_proposals_list, chevron_button: true), resource: proposal, class: "light button--sc", data: { disable: true, "redirect-url": proposal_path(proposal) }, title: decidim_html_escape(present(proposal).title) do %>
          <span class="show-for-sr"><%= decidim_html_escape(present(proposal).title) %></span>
          <%= icon "chevron-top", class: "icon--small", role: "img", "aria-hidden": true %>
          <span class="comment__votes--count">1<%#= up_votes_count %></span>
        <% end %>
      <% end %>
    <% else %>
      <% if @voted_proposals ? @voted_proposals.include?(proposal.id) : proposal.voted_by?(current_user) %>
        <%= action_authorized_button_to(
          :vote,
          proposal_proposal_vote_path(proposal_id: proposal, from_proposals_list: from_proposals_list, chevron_button: true),
          resource: proposal,
          method: :delete,
          remote: true,
          data: {
            disable: true,
            original: t("decidim.proposals.proposals.vote_button.already_voted"),
            replace: t("decidim.proposals.proposals.vote_button.already_voted_hover"),
            "redirect-url": proposal_path(proposal),
          },
          class: "light button--sc success",
          id: "vote_button-#{proposal.id}",
          title: t("decidim.proposals.proposals.vote_button.already_voted")
        ) do %>
          <span class="show-for-sr"><%= t("decidim.proposals.proposals.vote_button.already_voted") %></span>
          <%= icon "chevron-top", class: "icon--small", role: "img", "aria-hidden": true %>
          <span class="comment__votes--count">1<%#= up_votes_count %></span>
        <% end %>
      <% else %>
        <% if proposal.maximum_votes_reached? && !proposal.can_accumulate_supports_beyond_threshold && current_component.participatory_space.can_participate?(current_user) %>
          <%= content_tag :span, class: "light button--sc disabled", disabled: true, title: t("decidim.proposals.proposals.vote_button.maximum_votes_reached") do %>
            <span class="show-for-sr"><%= t("decidim.proposals.proposals.vote_button.maximum_votes_reached") %></span>
            <%= icon "chevron-top", class: "icon--small", role: "img", "aria-hidden": true %>
            <span class="comment__votes--count">1<%#= up_votes_count %></span>
          <% end %>
        <% else %>
          <% if vote_limit_enabled? && remaining_votes_count_for(current_user) == 0 %>
            <%= content_tag :span, class: "light button--sc", disabled: true, title: t("decidim.proposals.proposals.vote_button.no_votes_remaining") do %>
              <span class="show-for-sr"><%= t("decidim.proposals.proposals.vote_button.no_votes_remaining") %></span>
              <%= icon "chevron-top", class: "icon--small", role: "img", "aria-hidden": true %>
              <span class="comment__votes--count">1<%#= up_votes_count %></span>
            <% end %>
          <% elsif current_settings.votes_blocked? || !current_component.participatory_space.can_participate?(current_user) %>
            <%= content_tag :span, class: "light button--sc disabled", disabled: true, title: t("decidim.proposals.proposals.vote_button.votes_blocked") do %>
              <span class="show-for-sr"><%= t("decidim.proposals.proposals.vote_button.votes_blocked") %></span>
              <%= icon "chevron-top", class: "icon--small", role: "img", "aria-hidden": true %>
              <span class="comment__votes--count">1<%#= up_votes_count %></span>
            <% end %>
          <% else %>
            <%= action_authorized_button_to :vote, proposal_proposal_vote_path(proposal_id: proposal, from_proposals_list: from_proposals_list, chevron_button: true), resource: proposal, remote: true, data: { disable: true, "redirect-url": proposal_path(proposal) }, title: t("decidim.proposals.proposals.vote_button.vote"), class: "light button--sc" do %>
              <span class="show-for-sr"><%= t("decidim.proposals.proposals.vote_button.vote") %></span>
              <%= icon "chevron-top", class: "icon--small", role: "img", "aria-hidden": true %>
              <span class="comment__votes--count">1<%#= up_votes_count %></span>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
