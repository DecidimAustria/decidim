<div class="grid-x">
  <div class="cell">
    <%= form.hidden_field :position, class: "position" %>
    <%= form.text_field :title, optional: false %>
    <% if hide_proposal_title?(proposal) %>
      <span class="help-text">* <%= t(".title_hint") %></span>
    <% end %>
  </div>
</div>
<% if proposal.article? %>
<div class="grid-x">
  <div class="cell">
    <%= form.text_area :body, optional: false, rows: 5 %>
  </div>
</div>
<% end %>
